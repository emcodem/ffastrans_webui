        transform: translate(-50%, -50%);
    }

    .loader {
        border: 8px solid #f3f3f3;
        border-radius: 50%;
        border-top: 8px solid #3498db;
        -webkit-animation: spin 2s linear infinite;
        position: fixed;
        display: flex;
        justify-content: center;
        align-items: center;
